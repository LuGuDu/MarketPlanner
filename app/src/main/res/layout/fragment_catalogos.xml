<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_catalogos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Catalogos"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="383dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/bt_dia"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:contentDescription="Dia"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dia"
                    tools:src="@drawable/dia" />

                <ImageButton
                    android:id="@+id/bt_carrefour"
                    android:layout_width="153dp"
                    android:layout_height="152dp"
                    android:contentDescription="Carrefour"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/carrefour"
                    tools:src="@drawable/carrefour" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="38dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/bt_lidl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Lidl"
                    android:scaleType="fitCenter"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/lidl"
                    tools:src="@drawable/lidl" />

                <ImageButton
                    android:id="@+id/bt_aldi"
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:contentDescription="Aldi"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aldi"
                    tools:src="@drawable/aldi" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>